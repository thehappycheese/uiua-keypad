{
    "name": "uiua-keypad",
    "displayName": "Uiua Keypad",
    "description": "A keypad for the Uiua language",
    "version": "0.1.3",
    "license": "MIT",
	"publisher": "engineernick",
	"author": {"name": "Nicholas Archer"},
    "icon": "main-icon.png",
    "repository": {
        "url": "https://github.com/thehappycheese/uiua-keypad"
    },
    "engines": {
        "vscode": "^1.82.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands":[
            {"title": "uiua activate keypad", "command": "uiua_keypad.activate_keypad" },
            {"title": "Write Glyph",          "command": "uiua_keypad.write_glyph"    }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id":"uiua_view_container_id",
                    "title":"Uiua Keypad",
                    "icon":"./resources/uiua_keypad_icon.svg"
                }
            ]
        },
        "views": {
            "uiua_view_container_id": [
                {
                    "id": "uiua_keypad_view_id",
                    "name": "Uiua Keypad",
                    "icon": "./resources/uiua_keypad_icon.svg",
                    "contextualTitle": "Uiua Keypad",
                    
                    "when":"resourceExtname == .ua"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "uiua_keypad_view_id",
                "contents": "[Uiua Keypad](command:uiua_keypad.activate_keypad)"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.82.0",
        "@types/mocha": "^10.0.2",
        "@types/node": "18.x",
        "@typescript-eslint/eslint-plugin": "^6.7.3",
        "@typescript-eslint/parser": "^6.7.3",
        "eslint": "^8.50.0",
        "glob": "^10.3.3",
        "mocha": "^10.2.0",
        "typescript": "^5.2.2",
        "ts-loader": "^9.4.4",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4",
        "@vscode/test-electron": "^2.3.4"
    }
}